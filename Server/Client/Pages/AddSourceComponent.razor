@using BlazorComponentBus;

@inject IComponentBus Bus
@inject HttpClient httpClient

<p>Введите название источника</p>
<input type="text" @oninput="(e) => _source.Name = e.Value.ToString()" />
<p>Введите ссылку на источник</p>
<input type="text" @oninput="(e) => _source.Url = e.Value.ToString()" />
<p>Введите описание</p>
<input type="text" @oninput="(e) => _source.Description = e.Value.ToString()" />
<button @onclick="() => AddSource()">Добавить источник</button>
